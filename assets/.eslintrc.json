{
	"env": {
		"browser": true,
		"es2021": true
	},
	"plugins": ["plugin:import/errors", "solid", "simple-import-sort", "import"],
	"extends": [
		"eslint:recommended",
		"plugin:solid/recommended",
		"prettier",
		"plugin:import/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					["styled-system", "./styled-system"],
					["@", "./src"]
				],
				"extensions": [".mjs", ".js", ".jsx", ".json"]
			}
		}
	}
}
