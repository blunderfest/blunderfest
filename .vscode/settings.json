{
  "workbench.editor.enablePreview": false,
  "files.associations": {
    "*.heex": "phoenix-heex"
  },
  "[elixir]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[phoenix-heex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "RoyalMist.vscode-eex-format"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.prettierPath": "./assets/node_modules/prettier",
  "scss.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.autoClosingQuotes": "always",
  "cssvar.files": ["./assets/node_modules/open-props/open-props.min.css"],
  // Do not ignore node_modules css files, which is ignored by default
  "cssvar.ignore": [],
  "cssvar.extensions": ["css", "postcss", "tsx"],
  "exportall.config.folderListener": ["/assets/src/styles"],
  "autoBarrel.defaultLanguage": "JavaScript",
  "autoBarrel.quoteStyle": "Double",
  "autoBarrel.disableRecursiveBarrelling": true
}
