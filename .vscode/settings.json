{
  "workbench.editor.enablePreview": false,
  "files.associations": {
    "*.heex": "phoenix-heex"
  },
  "[elixir]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[phoenix-heex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "RoyalMist.vscode-eex-format"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.prettierPath": "./assets/node_modules/prettier",
  "scss.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.autoClosingQuotes": "always",
  "autoBarrel.defaultLanguage": "JavaScript",
  "autoBarrel.quoteStyle": "Double",
  "autoBarrel.disableRecursiveBarrelling": true,
  "panda.color-hints.color-preview.enabled": true
}
