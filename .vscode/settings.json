{
  "workbench.editor.enablePreview": false,
  "files.associations": {
    "*.heex": "phoenix-heex"
  },
  "[elixir]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[phoenix-heex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "scss.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.autoClosingQuotes": "always",
  "eslint.debug": true,
  "eslint.workingDirectories": ["assets"],
  "javascript.suggest.autoImports": true,
  "javascript.validate.enable": false,
  "typescript.tsserver.log": "verbose",
  "cssvar.files": [
    "./assets/packages/design-system/node_modules/@radix-ui/**/*.css",
    "./assets/packages/design-system/styled-system/**/*.css"
  ],
  "cssvar.ignore": ["**/node_modules/**"],
  "js/ts.implicitProjectConfig.checkJs": true,
  "barreler.exclude": ["use*"],
  "barreler.mode": "multifile-index",
  "explorer.compactFolders": false,
  "explorer.autoReveal": false
}
