{
  "workbench.editor.enablePreview": false,
  "files.associations": {
    "*.heex": "phoenix-heex"
  },
  "[elixir]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[phoenix-heex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "RoyalMist.vscode-eex-format"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.prettierPath": "./assets/node_modules/prettier",
  "scss.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.autoClosingQuotes": "always",
  "cssvar.files": ["./assets/node_modules/open-props/open-props.min.css"],
  "cssvar.ignore": [],
  "cssvar.extensions": ["css", "postcss", "ts", "js", "jsx"],
  "autoBarrel.defaultLanguage": "JavaScript",
  "autoBarrel.quoteStyle": "Double",
  "autoBarrel.disableRecursiveBarrelling": true,
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "javascript.preferences.importModuleSpecifier": "relative"
}
